---
bootstrapVersion: 3

styleLoaders:
    - style
    - css?sourceMap
    - postcss
    - sass?sourceMap&output=expanded&precision=8

preBootstrapCustomizations: ./modules/styles/_bootstrap_defaults.scss

styles:
    # Always needs to be included
    mixins: true

    # Normalize
    normalize: true
    scaffolding: true

    # Utilities
    utilities: true

    # Selected stylesheets
    buttons: true
    forms: true
    grid: true
    panels: true

scripts: false
