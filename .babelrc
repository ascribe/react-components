{
    'presets': ['react', 'es2015-no-commonjs'],
    'plugins': [
        'transform-inline-environment-variables',
        'transform-export-extensions',
        'transform-object-assign',
        'transform-object-rest-spread',
        'transform-react-display-name'
    ],
    'sourceMaps': true,

    'env': {
        'bundle': {
            'plugins': [
                ['transform-runtime', {
                    'polyfill': true,
                    'regenerator': false
                }]
            ]
        },
        'cjs': {
            'plugins': [
                'transform-es2015-modules-commonjs',
                'import-styles-down-processor'
            ]
        },
        'es6': {
            'plugins': ['import-styles-down-processor']
        },
        'demo': {
            'plugins': [
                ['transform-runtime', {
                    'polyfill': true,
                    'regenerator': false
                }],
                ['react-transform', {
                    'transforms': [{
                        'transform': 'react-transform-hmr',
                        'imports': ['react'],
                        'locals': ['module']
                    }]
                }]
            ]
        }
    }
}
