{
    'presets': ['react', 'es2015-no-commonjs'],
    'plugins': [
        'transform-runtime',
        'transform-react-display-name',
        'transform-export-extensions',
        'transform-object-assign',
        'transform-object-rest-spread',
    ],
    'sourceMaps': true,

    'env': {
        'demo': {
            'plugins': [
                [ 'react-transform', {
                    'transforms': [{
                        'transform': 'react-transform-hmr',
                        'imports': ['react'],
                        'locals': ['module']
                    }]
                } ]
            ]
        }
    }
}
